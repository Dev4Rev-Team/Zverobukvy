<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?app_background_color"
    android:propertyName="">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/start_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/awards_screen_title"
        tools:visibility="invisible" />

    <FrameLayout
        android:id="@+id/player_change_background_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/award_screen_player_gradient_background"
        tools:visibility="invisible" />

    <FrameLayout
        android:id="@+id/awarded_player_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/main_guideline"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/player_name_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/secondary_color"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Александр" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/awards_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_guideline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rang_award_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/rank_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/learner"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/avatar"
                app:layout_constraintStart_toStartOf="@id/avatar"
                app:layout_constraintTop_toBottomOf="@id/avatar" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/avatar"
                style="@style/Avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/avatar_background"
                app:layout_constraintBottom_toTopOf="@+id/rank_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:strokeWidth="@dimen/avatar_stroke">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/player_avatar_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_avatar_image"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/avatar_drake" />
            </com.google.android.material.card.MaterialCardView>

            <!--<TextView
                android:id="@+id/rank_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:alpha="1"
                android:gravity="center"
                android:textSize="72sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Эксперт"
                tools:textColor="#6A077C" />-->

            <!--<androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/rang_background_imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:scaleType="centerCrop"
                android:scaleX="1.3"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_guideline"
                app:srcCompat="@drawable/laurus" />-->

            <FrameLayout
                android:id="@+id/flash_frameLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:alpha="0"
                android:background="@drawable/award_screen_rank_gradient_background"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rank_textView" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_rating_award_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_container_cardView"
                android:layout_width="160dp"
                android:layout_height="240dp"
                android:theme="@style/Theme.Material3.Light"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_mount_lower_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="1dp"
                    tools:cardBackgroundColor="#2247B1"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="0dp"
                    tools:alpha="1">

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_mount_upper_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:cardBackgroundColor="#FDD835"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="0dp"
                    tools:alpha="1">

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_field_lower_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="3dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="0dp"
                    tools:visibility="visible">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_field_upper_cardView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#43A047"
                        app:cardCornerRadius="12dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/cards_counter_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="40sp"
                            tools:text="30" />

                    </com.google.android.material.card.MaterialCardView>

                </com.google.android.material.card.MaterialCardView>


            </com.google.android.material.card.MaterialCardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
