<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D0E1FB"
    android:clickable="true"
    tools:context=".presentation.main_menu.view.MainMenuFragment"
    >


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sector_header_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="100dp" />

    <TextView
        android:id="@+id/app_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="42sp"
        app:layout_constraintBottom_toTopOf="@+id/sector_header_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/players_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/players_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sector_header_guideline" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/players_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/sector_recycle_view_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/players_text_view">


    </androidx.recyclerview.widget.RecyclerView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sector_recycle_view_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <TextView
        android:id="@+id/cards_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/main_menu_fragment_game_cards_header_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sector_recycle_view_guideline" />

    <ToggleButton
        android:id="@+id/blue_toggle_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/color_card_blue"
        android:textColor="@color/white"
        android:textOff="@string/space"
        android:textOn="@string/choose"
        app:layout_constraintBottom_toTopOf="@+id/sector_game_cards_guideline"
        app:layout_constraintEnd_toStartOf="@+id/violet_toggle_button"
        app:layout_constraintStart_toEndOf="@+id/green_toggle_button"
        app:layout_constraintTop_toTopOf="@+id/sector_recycle_view_guideline" />

    <ToggleButton
        android:id="@+id/orange_toggle_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="@color/color_card_orange"
        android:checked="true"
        android:textColor="@color/white"
        android:textOff="@string/space"
        android:textOn="@string/choose"
        app:layout_constraintBottom_toTopOf="@+id/sector_game_cards_guideline"
        app:layout_constraintEnd_toStartOf="@+id/green_toggle_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sector_recycle_view_guideline" />

    <ToggleButton
        android:id="@+id/green_toggle_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/color_card_green"
        android:textColor="@color/white"
        android:textOff="@string/space"
        android:textOn="@string/choose"
        app:layout_constraintBottom_toTopOf="@+id/sector_game_cards_guideline"
        app:layout_constraintEnd_toStartOf="@+id/blue_toggle_button"
        app:layout_constraintStart_toEndOf="@+id/orange_toggle_button"
        app:layout_constraintTop_toTopOf="@+id/sector_recycle_view_guideline" />

    <ToggleButton
        android:id="@+id/violet_toggle_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/color_card_violet"
        android:textColor="@color/white"
        android:textOff="@string/space"
        android:textOn="@string/choose"
        app:layout_constraintBottom_toTopOf="@+id/sector_game_cards_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/blue_toggle_button"
        app:layout_constraintTop_toTopOf="@+id/sector_recycle_view_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sector_game_cards_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="149dp" />


    <Button
        android:id="@+id/rules_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:text="@string/main_menu_fragment_open_rules_text"
        android:textColor="@color/black"
        app:cornerRadius="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play_button" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#445D79"
        app:cornerRadius="6dp"
        android:text="@string/main_menu_fragment_play_game_text_button"
        app:layout_constraintBottom_toTopOf="@+id/rules_button"
        app:layout_constraintEnd_toEndOf="@+id/rules_button"
        app:layout_constraintStart_toStartOf="@+id/rules_button"
        app:layout_constraintTop_toTopOf="@+id/sector_game_cards_guideline" />


</androidx.constraintlayout.widget.ConstraintLayout>