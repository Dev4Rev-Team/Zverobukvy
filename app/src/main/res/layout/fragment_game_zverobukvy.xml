<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.game_zverobukvy.GameZverobukvyFragment">

    <ru.gb.zverobukvy.presentation.customview.CustomCard
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:id="@+id/card"
        android:background="#2C9FEC"
        android:backgroundTint="#31B1F6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_field"
        />

    <ru.gb.zverobukvy.presentation.customview.CustomCardTable
        android:id="@+id/table"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#4EF6DD"
        android:backgroundTint="#49EFFF"
        app:horizontalGap="24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="5:7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_field"
        app:layout_constraintVertical_bias="0.5"
        app:verticalGap="24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32" />

</androidx.constraintlayout.widget.ConstraintLayout>