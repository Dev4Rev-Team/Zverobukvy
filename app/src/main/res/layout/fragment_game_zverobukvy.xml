<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0E1FB"
    tools:context=".presentation.game_zverobukvy.GameZverobukvyFragment">

    <ImageButton
        android:id="@+id/fragment_game_zverobukvy_image_button_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_game_zverobukvy_card_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toStartOf="@+id/fragment_game_zverobukvy_image_button_play_pause"
        app:layout_constraintStart_toEndOf="@+id/fragment_game_zverobukvy_image_button_menu"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fragment_game_zverobukvy_text_view_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="4dp"
            android:gravity="center"
            android:text="@string/username_default" />
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/fragment_game_zverobukvy_image_button_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_game_zverobukvy_card_previous_player"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/color_orange_pastel"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_game_zverobukvy_guidline_sector_menu"
        app:layout_constraintEnd_toStartOf="@+id/fragment_game_zverobukvy_card_player_score">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_game_zverobukvy_card_player_score"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/color_violet_pastel"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_game_zverobukvy_guidline_sector_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/fragment_game_zverobukvy_text_view_player_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="2"
            android:textSize="26sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_game_zverobukvy_card_next_player"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/color_blue_pastel"
        app:layout_constraintBottom_toTopOf="@+id/fragment_game_zverobukvy_guidline_sector_menu"
        app:layout_constraintStart_toEndOf="@+id/fragment_game_zverobukvy_card_player_score" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_game_zverobukvy_guidline_sector_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="97dp" />

    <ru.gb.zverobukvy.presentation.customview.CustomCard
        android:id="@+id/fragment_game_zverobukvy_word_custom_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@id/fragment_game_zverobukvy_guidline_sector_word_card_image"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_game_zverobukvy_guidline_sector_menu" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_game_zverobukvy_guidline_sector_word_card_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.36" />

    <ru.gb.zverobukvy.presentation.customview.CustomCardTable
        android:id="@+id/fragment_game_zverobukvy_custom_card_table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_game_zverobukvy_guidline_word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_game_zverobukvy_guidline_sector_word_card_image" >

    </ru.gb.zverobukvy.presentation.customview.CustomCardTable>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_game_zverobukvy_guidline_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <ru.gb.zverobukvy.presentation.customview.CustomCardTable
        android:id="@+id/fragment_game_zverobukvy_table"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:horizontalGap="24"
        app:layout_constraintBottom_toTopOf="@+id/fragment_game_zverobukvy_guidline_word_cards_table"
        app:layout_constraintDimensionRatio="5:7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_game_zverobukvy_guidline_word"
        app:layout_constraintVertical_bias="0.5"
        app:verticalGap="24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_game_zverobukvy_guidline_word_cards_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="60dp" />

    <Button
        android:id="@+id/next_player_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next player"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/next_word_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next word"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragment_game_zverobukvy_text_view_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Игра на паузе"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_game_zverobukvy_guidline_word_cards_table" />


</androidx.constraintlayout.widget.ConstraintLayout>