<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.carousel.MaskableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/avatar_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        app:cardCornerRadius="@dimen/main_menu_card_corner_radius"
        app:strokeColor="@color/transparent"
        android:layout_gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/background_avatar_card_view"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            app:strokeColor="@color/transparent"
            app:cardBackgroundColor="@color/avatar_background"
            app:cardCornerRadius="@dimen/avatar_corner_radius"
            android:layout_margin="@dimen/margin_default"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/player_avatar_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_avatar_image"
                android:scaleType="fitCenter"
                android:src="@drawable/avatar_drake" />
        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.card.MaterialCardView>

</com.google.android.material.carousel.MaskableFrameLayout>

