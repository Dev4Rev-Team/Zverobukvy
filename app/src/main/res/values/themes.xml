<resources>
    <!-- Base application theme.-->
    <style name="Base.Theme.Zverobukvy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Main Theme. -->
        <item name="fontFamily">@font/junegull</item>
        <item name="colorPrimary">@color/secondary_color</item>
        <item name="colorSecondary">@color/primary_color</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="strokeColor">@color/transparent</item>

        <item name="app_background_color">@color/primary_color</item>
        <item name="app_splashscreen_background">@color/color_blue</item>
        <item name="app_end_game_background_color">@color/color_violet_pastel</item>

        <item name="app_flag_color">@color/color_red</item>

        <item name="app_text_color_lvl1">@color/secondary_color</item>
        <item name="app_text_color_lvl2">@color/secondary_color</item>
        <item name="app_text_color_lvl3">@color/white</item>

        <item name="app_text_color_button">@color/secondary_color</item>
        <item name="app_text_color_button_outline">@color/white</item>

        <item name="app_text_color_button_play">@color/secondary_color</item>
        <item name="app_text_color_button_play_outline">@color/white</item>

        <item name="app_next_player_color">@drawable/background_green_transparent</item>
        <item name="app_wrong_color">@drawable/background_red_transparent</item>
        <item name="app_computer_color">@color/transparent</item>
    </style>

    <!--Default Theme-->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_screen_background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_fox</item>
        <item name="postSplashScreenTheme">@style/Theme.Zverobukvy</item>
    </style>

    <style name="Theme.Zverobukvy" parent="Base.Theme.Zverobukvy" />

    <!--New Year Theme-->
    <style name="Theme.App.Starting.NewYear" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/red_new_year</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_fox</item>
        <item name="postSplashScreenTheme">@style/Theme.Zverobukvy.NewYear</item>
    </style>

    <style name="Theme.Zverobukvy.NewYear" parent="Base.Theme.Zverobukvy" >
        <item name="colorPrimary">@color/red_new_year</item>

        <item name="app_background_color">@drawable/app_background_new_year</item>

        <item name="app_splashscreen_background">@color/color_blue</item>
        <item name="app_end_game_background_color">@drawable/app_background_violet_new_year</item>

        <item name="app_flag_color">@color/color_green</item>

        <item name="app_text_color_lvl1">@color/white</item>
        <item name="app_text_color_lvl2">@color/secondary_color</item>
        <item name="app_text_color_lvl3">@color/white</item>

        <item name="app_text_color_button_play">@color/white</item>
        <item name="app_text_color_button_play_outline">@color/secondary_color</item>

        <item name="app_next_player_color">@drawable/background_white_transparent</item>
        <item name="app_wrong_color">@drawable/background_blue_transparent</item>
        <item name="app_computer_color">@color/transparent</item>
    </style>

</resources>