<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Zverobukvy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="fontFamily">@font/junegull</item>
        <item name="colorPrimary">@color/secondary_color</item>
        <item name="colorSecondary">@color/primary_color</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="strokeColor">@color/transparent</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimationDuration">250</item>
        <item name="postSplashScreenTheme">@style/Theme.Zverobukvy</item>
    </style>

    <style name="Theme.Zverobukvy" parent="Base.Theme.Zverobukvy" />

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="cornerRadius">@dimen/main_menu_card_corner_radius</item>
    </style>

    <style name="Button.Dark" parent="Button">
        <item name="backgroundTint">@color/button_primary.dark</item>
        <item name="android:textColor">@color/button_primary</item>
    </style>

    <style name="Button.Tiny" parent="Button">
        <item name="android:textSize">@dimen/text_tiny</item>
    </style>

    <style name="Button.Tiny.Dark" parent="Button.Tiny">
        <item name="backgroundTint">@color/button_primary.dark</item>
        <item name="android:textColor">@color/button_primary</item>
    </style>

    <style name="Button.Big" parent="Button">
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="Button.Big.Dark" parent="Button.Big">
        <item name="backgroundTint">@color/button_primary.dark</item>
        <item name="android:textColor">@color/button_primary</item>
    </style>

    <style name="Button.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Button.Medium.Dark">
        <item name="backgroundTint">@color/button_primary.dark</item>
        <item name="android:textColor">@color/button_primary</item>
    </style>

    <style name="RatingCardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">@dimen/rating_card_view_card_corner_radius</item>
        <item name="strokeWidth">@dimen/rating_card_view_stroke_width</item>
    </style>

    <style name="RatingTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_tiny</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Avatar" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_width">@dimen/avatar_size</item>
        <item name="android:layout_height">@dimen/avatar_size</item>
        <item name="backgroundTint">@color/avatar_background</item>
        <item name="cardCornerRadius">@dimen/avatar_corner_radius</item>
        <item name="strokeColor">@color/transparent</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
    </style>

    <style name="Avatar.Status" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="backgroundTint">@color/color_green_pastel</item>
        <item name="cardCornerRadius">@dimen/avatar_corner_radius</item>
        <item name="strokeColor">@color/transparent</item>
        <item name="android:layout_marginStart">-12dp</item>
        <item name="android:layout_marginBottom">-12dp</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
    </style>

</resources>