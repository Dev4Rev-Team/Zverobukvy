<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="app_background_color" format="color|reference">@attr/primary_color</attr>
    <attr name="app_splashscreen_background" format="color|reference">@attr/color_blue</attr>
    <attr name="app_end_game_background_color" format="color|reference">@attr/color_violet_pastel</attr>

    <attr name="app_flag_color" format="color|reference">@attr/color_red</attr>

    <attr name="app_text_color_lvl1" format="color">@attr/primary_color</attr>
    <attr name="app_text_color_lvl2" format="color">@attr/primary_color</attr>
    <attr name="app_text_color_lvl3" format="color">@attr/primary_color</attr>

    <attr name="app_text_color_button" format="color">@attr/secondary_color</attr>
    <attr name="app_text_color_button_outline" format="color">@attr/white</attr>

    <attr name="app_text_color_button_play" format="color">@attr/white</attr>
    <attr name="app_text_color_button_play_outline" format="color">@attr/white</attr>

    <attr name="app_next_player_color" format="color|reference">#94ff00</attr>
    <attr name="app_wrong_color" format="color|reference">#FF0000</attr>
    <attr name="app_computer_color" format="color|reference">#444FCA</attr>

    <!--Elements style-->
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">?app_text_color_button_outline</item>
        <item name="android:textColor">?app_text_color_button</item>
        <item name="cornerRadius">@dimen/main_menu_card_corner_radius</item>
    </style>

    <style name="Button.Dark" parent="Button">
        <item name="backgroundTint">?app_text_color_button</item>
        <item name="android:textColor">?app_text_color_button_outline</item>
    </style>

    <style name="Button.Tiny" parent="Button">
        <item name="android:textSize">@dimen/text_tiny</item>
    </style>

    <style name="Button.Tiny.Dark" parent="Button.Tiny">
        <item name="backgroundTint">?app_text_color_button</item>
        <item name="android:textColor">?app_text_color_button_outline</item>
    </style>

    <style name="Button.Big" parent="Button">
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="Button.Play" parent="Button.Big.Dark">
        <item name="backgroundTint">?app_text_color_button_play</item>
        <item name="android:textColor">?app_text_color_button_play_outline</item>
    </style>

    <style name="Button.Big.Dark" parent="Button.Big">
        <item name="backgroundTint">?app_text_color_button</item>
        <item name="android:textColor">?app_text_color_button_outline</item>
    </style>

    <style name="Button.Big.Light" parent="Button.Big">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/secondary_color</item>
    </style>

    <style name="Button.Medium" parent="Button">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Button.Medium.Dark" parent="Button.Medium">
        <item name="backgroundTint">?app_text_color_button</item>
        <item name="android:textColor">?app_text_color_button_outline</item>
    </style>

    <style name="RatingCardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">@dimen/rating_card_view_card_corner_radius</item>
        <item name="strokeWidth">@dimen/rating_card_view_stroke_width</item>
        <item name="layout_constraintDimensionRatio">4:6</item>
    </style>

    <style name="RatingTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_tiny</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DiamondImageView">
        <item name="srcCompat">@drawable/diamond</item>
        <item name="tint">@color/border_rank_legend</item>
        <item name="android:layout_margin">@dimen/diamond_image_view_margin</item>
    </style>

    <style name="Avatar" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_width">@dimen/avatar_size</item>
        <item name="android:layout_height">@dimen/avatar_size</item>
        <item name="backgroundTint">@color/avatar_background</item>
        <item name="cardCornerRadius">@dimen/avatar_corner_radius</item>
        <item name="strokeColor">@color/transparent</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
    </style>

    <style name="Avatar.Status" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_width">@dimen/avatar_status_size</item>
        <item name="android:layout_height">@dimen/avatar_status_size</item>
        <item name="backgroundTint">@color/color_green_pastel</item>
        <item name="cardCornerRadius">@dimen/avatar_status_corner_radius</item>
        <item name="strokeColor">@color/transparent</item>
        <item name="android:layout_marginStart">-12dp</item>
        <item name="android:layout_marginBottom">-12dp</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
    </style>

</resources>